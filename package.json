  "scripts": {
    "dev": "echo \"\n--- PASO 1: EJECUTAR BACKEND CON SUDO EN UNA NUEVA TERMINAL ---\n\" && echo \"Abra otra terminal y ejecute: npm run start:flask\" && echo \"\n--- PASO 2: INICIANDO FRONTEND ---\n\" && npm run start:react",
