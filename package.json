    "setup:python": "cd python-back && echo \"--- Configurando entorno Python ---\" && python3 -m venv venv && ./venv/bin/pip install -r requirements.txt",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
